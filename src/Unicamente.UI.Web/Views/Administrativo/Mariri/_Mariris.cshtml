@model Unicamente.UI.Web.Models.AdministrativoViewModel

<section class="realstate" style="padding: 0">
    <div class="container">

        <div class="section-title" style="padding: 5px">
            <h2>Cadastro de Mariri</h2>

        </div>

        <div id="tabela-mariri">

            <partial name="_ListaMariris.cshtml" model="@Model.Mariris" />
        </div>

        <div id="formulario-mariri" style="display:none">
            <partial name="_FormularioMariri.cshtml" model="@Model.Mariri" />
        </div>

    </div>


</section>
