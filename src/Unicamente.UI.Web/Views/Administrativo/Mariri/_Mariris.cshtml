    <script>

        function atualizaListaMariris() {
            $.ajax({
                type: 'GET',
                url: '/Administrativo/ListaMariris',
                // dataType: 'html',
                success: function (data) {
                    $("#tabela-mariri").html('');
                    $("#tabela-mariri").html(data);
                    tabelaMariri();

                }
            });
        }

        function tabelaMariri() {
            $("#tabela-mariri").show();
            $("#formulario-mariri").hide();
            limpaFormularioMariri();
        }

        function formularioMariri() {
            $("#tabela-mariri").hide();
            $("#formulario-mariri").show();

        }

    </script>

