<script>



    function atualizaListaChacronas() {
        $.ajax({
            type: 'GET',
            url: '/Administrativo/ListaChacronas',
            // dataType: 'html',
            success: function (data) {
                $("#tabela-chacrona").html('');
                $("#tabela-chacrona").html(data);
                tabelaChacrona();

            }
        });
    }

    function tabelaChacrona() {
        $("#tabela-chacrona").show();
        $("#formulario-chacrona").hide();
        limpaFormularioChacrona();
    }

    function formularioChacrona() {
        $("#tabela-chacrona").hide();
        $("#formulario-chacrona").show();

    }


</script>