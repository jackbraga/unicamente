@model Unicamente.UI.Web.Models.AdministrativoViewModel

<section class="realstate" style="padding: 0">
    <div class="container">

        <div class="section-title" style="padding: 5px">
            <h2>Cadastro de Chacrona</h2>

        </div>

        <div id="tabela-chacrona">

            <partial name="_ListaChacronas.cshtml" model="@Model.Chacronas" />
        </div>

        <div id="formulario-chacrona" style="display:none">
            <partial name="_FormularioChacrona.cshtml" model="@Model.Chacrona" />
        </div>

    </div>


</section>
