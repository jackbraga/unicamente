<script>



    function atualizaListaRecipientes() {
        $.ajax({
            type: 'GET',
            url: '/Administrativo/ListaRecipientes',
            // dataType: 'html',
            success: function (data) {
                $("#tabela-recipiente").html('');
                $("#tabela-recipiente").html(data);
                tabelaRecipiente();

            }
        });
    }

    function tabelaRecipiente() {
        $("#tabela-recipiente").show();
        $("#formulario-recipiente").hide();
        limpaFormularioRecipiente();
    }

    function formularioRecipiente() {
        $("#tabela-recipiente").hide();
        $("#formulario-recipiente").show();

    }


</script>