@model Unicamente.UI.Web.Models.AdministrativoViewModel

<section class="realstate" style="padding: 0">
    <div class="container">

        <div class="section-title" style="padding: 5px">
            <h2>Cadastro de Recipientes</h2>

        </div>

        <div id="tabela-recipiente">

            <partial name="_ListaRecipientes.cshtml" model="@Model.Recipientes" />
        </div>

        <div id="formulario-recipiente" style="display:none">
            <partial name="_FormularioRecipiente.cshtml" model="@Model.Recipiente" />
        </div>

    </div>


</section>
