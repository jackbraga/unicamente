@model Unicamente.UI.Web.Models.EmailContatoViewModel
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Contato</h2>
            <p>Ficou com alguma dúvida e quer maiores esclarecimentos? Estamos prontos para te atender.</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-6">

                <div class="row">
                    <div class="col-md-12">
                        <div class="info-box">
                            <i class="bx bx-map"></i>
                            <h3>Nosso Endereço</h3>
                            <p>
                                Rua José T. Ribeiro, 1414 - Ilha da Figueira <br>
                                Jaraguá do Sul - SC - 89258-000
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box mt-4">
                            <i class="bx bx-envelope"></i>
                            <h3>Email</h3>
                            <p>contato@oskem.com.br</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box mt-4">
                            <i class="bx bxl-whatsapp"></i>
                            <h3>Fale Conosco</h3>
                            <p>+55 47 3017-0416</p>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-6">
                @* <form action="forms/contact.php" method="post" role="form" class="php-email-form"> *@
                <form method="post" data-aja data-ajax-method="post" onsubmit="$('#botaoContato').css('display', 'none');" data-ajax="true" data-ajax-url="/Home/EmailContato" data-ajax-success="onSuccessContato" data-ajax-loading="#loading" role="form" class="php-email-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col form-group">
                            <input type="text" asp-for="Nome" class="form-control" id="name" placeholder="Seu Nome" required>
                        </div>
                        <div class="col form-group" style="margin-top: 8px">
                            <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Seu Email" required>
                            @* <span asp-validation-for="Email" class="text-danger"></span> *@




                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Assunto" id="subject" placeholder="Assunto" required>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" asp-for="Mensagem" rows="5" placeholder="Mensagem" required></textarea>
                    </div>
                    <div class="my-3">
                        <div class="loading">Carregando</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Sua mensagem foi enviada. Obrigado!</div>
                    </div>
                    <div style="text-align: right">
                        <button id="botaoContato" type="submit">Enviar</button>
                        @* <img src="~/img/loading_1.gif" id="loading" alt="Carregando..." style="display:none" /> *@
                        <img id="loading" src="~/img/loading_branco.gif" alt="Carregando..." style="display: none; height: 48px;" />

                    </div>



                </form>
            </div>

        </div>

    </div>
</section>

<script>

    function onSuccessContato(response) {
        $('#botaoContato').show();  
        exibirPopup(response.icone, response.titulo, response.mensagem);
    }






</script>